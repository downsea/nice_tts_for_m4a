# Nice-TTS Configuration File
# Copy this file to .env and modify the values as needed

# Whisper Model Configuration
# Available models: tiny, base, small, medium, large, large-v1, large-v2, large-v3
# Default: base (good balance of speed and accuracy for Chinese)
WHISPER_MODEL=base

# Language Configuration
# Default language for transcription (zh=Chinese, en=English, etc.)
# See https://github.com/openai/whisper#available-models-and-languages
DEFAULT_LANGUAGE=zh

# Output Configuration
# Directory for saving transcription results
# Default: ./transcriptions
OUTPUT_DIR=./transcriptions

# Processing Configuration
# Number of parallel processes for batch processing
# Default: number of CPU cores
# MAX_WORKERS=4

# GPU Configuration
# Force CPU usage even if GPU is available (true/false)
# Default: false (use GPU if available)
# FORCE_CPU=false

# Audio Processing Configuration
# Sample rate for audio processing (Hz)
# Default: 16000
# SAMPLE_RATE=16000

# M4A Processing Configuration
# Enable M4A file validation and repair (true/false)
# Default: true
# M4A_VALIDATION=true

# Logging Configuration
# Log level (DEBUG, INFO, WARNING, ERROR)
# Default: INFO
# LOG_LEVEL=INFO

# Verbose output (true/false)
# Default: false
# VERBOSE=false

# Advanced Configuration
# Temperature for Whisper model (0.0-1.0)
# Lower values = more deterministic, higher values = more creative
# Default: 0.0
# WHISPER_TEMPERATURE=0.0

# Beam size for decoding
# Default: 5
# BEAM_SIZE=5

# Best of N sampling
# Default: 5
# BEST_OF=5